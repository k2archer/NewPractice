<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".part.listviewdemo.ListViewDemoActivity">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
            android:id="@+id/list_view_demo_add_item_btn"
            android:text="Add Item" android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/list_view_demo_delete_item_btn"
            android:text="Delete Item" android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/list_view_demo_scroll_item_btn"
            android:text="Scroll" android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_view_demo_list"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/list_view_demo_add_item_btn"/>
</LinearLayout>
