                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="Fragment"-->
                <!--android:textSize="32sp"-->
                <!--android:id="@+id/textView" />-->
        <!--</RelativeLayout>-->

    </FrameLayout>

</RelativeLayout>
